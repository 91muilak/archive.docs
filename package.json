{
	"scripts": {
		"sass:compile": "sass src/sass/:assets/css --style compressed",
		"sass:watch": "sass --watch src/sass/:assets/css",
		"sass:watch-compressed": "sass --watch src/sass/:assets/css --style compressed",
		"11ty:build": "npx @11ty/eleventy --config=.configs/.11ty.js",
		"11ty:watch": "npx @11ty/eleventy --watch --config=.configs/.11ty.js",
		"11ty:serve": "npx @11ty/eleventy --serve --config=.configs/.11ty.js",
		"11ty:serve8081": "eleventy --serve --port=8081 --config=.configs/.11ty.js",
		"editorconfig": "editorconfig-checker"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.12.1",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
		"editorconfig-checker": "^4.0.2",
		"markdown-it": "^12.2.0",
		"markdown-it-attrs": "^4.1.0",
		"npm-run-all": "^4.1.5",
		"nunjucks": "^3.2.3",
		"prismjs": "^1.25.0",
		"sass": "^1.44.0"
	}
}
